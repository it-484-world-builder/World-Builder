%h2 Create New NPC

= image_tag "/images/default_npc_image.png"

= form_tag npcs_path, :method => :post do

  = label :npc, :name, 'Name'
  = text_field :npc, :name

  = label :npc, :description, 'Description'
  = text_field :npc, :description
 
  = label :npc, :gm_note, 'GM Note'
  = text_field :npc, :gm_note
  
  = label :npc, :player_note, 'Player Note'
  = text_field :npc, :player_note
  
  = label :npc, :location_id, 'Select a location for your NPC'
  = collection_select(:npc, :location_id, Location.all, :id, :name, prompt: true, selected: @location_id)
  
  = hidden_field_tag(:gm, params["gm"])
  = hidden_field_tag(:campaign_id, params["campaign_id"])

  = submit_tag 'Save Changes'
= link_to "Back to #{@location.name}", location_path(@location_id, gm: @gm, campaign_id: @campaign_id), :class => 'button'
