%h2 Details about #{@npc.name}

%ul#details
  %li
    Name:
    = @npc.name
  %li
    Created on:
    = @npc.created_at.strftime("%B %d, %Y")

%h3 Description:

%div#description= @npc.description

%h3 GM Note:

%div#gm_note= @npc.gm_note

%h3 Character Note:

%div#character_note= @npc.character_note

= link_to 'Back to NPC list', npcs_path, :class => 'button'
= link_to "Edit", edit_npc_path(@npc), :class => 'button'
= link_to 'Delete', npc_path(@npc), :method => :delete, :class => 'button'