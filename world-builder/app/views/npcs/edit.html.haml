%h2 Edit #{@npc.name}

= form_tag npc_path(@npc), :method => :put do
  = image_tag @npc.image_file_path + @npc.image_file_name
  = file_field :npc, :image_file_name, :class => "image"

  = label :npc, :name, 'Name'
  = text_field :npc, :name

  = label :npc, :description, 'Description'
  = text_field :npc, :description
 
  = label :npc, :gm_note, 'GM Note'
  = text_field :npc, :gm_note
  
  = label :npc, :player_note, 'Player Note'
  = text_field :npc, :player_note
  
  = submit_tag 'Save Changes'
  
= link_to "Back to #{@npc.name} Details", npc_path(@npc), :class => 'button'